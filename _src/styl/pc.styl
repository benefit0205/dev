// 変数
tmWhite = #ffffff;
tmBlack = #000000;
tmGrey = #333333;
tmLGrey = #8c9398;
tmBlue = #0093cb;

@media screen and (min-width : 769px){
	.nav-sp,.tcon {
		display: none !important;
	}
	// mv
	.mv-contents__ttl {
		position: absolute;
		top: 50%;
		left: 0;
		width: 100%;
		text-align: center;
		font-size: 0;
		z-index: 1;
		margin-top: -70px;

		span {
			display: block;
			font-size: 18px;
			margin-top: 5px;
			color: #827E7E;
			text-transform: uppercase;
		}
	}
	#particles-js{
		width: 100%;
		height: 100%;
		background-color: tmWhite;
		padding: 0 10px;
		box-sizing: border-box;
		position: relative;
	}
	.icon-font:before {
		font-size: 50px !important;
	}
	.content {
		position: absolute;
		top: 50%;
		left: 50%;
		margin-left: -5px;
	}
	.mv-contents__nav {
		position: absolute;
		width: 100%;
		top: 50%;
		left: 0;
		margin-top: 75px;
		text-align: center;
		z-index: 1;

		ul {
			font-size: 0;

			li {
				display: inline-block;
				margin: 5px;

				a {
					display: block;
					background-color: transparent;
					border: 2px solid tmGrey;
					border-radius: 2px
					text-align: center;
					font-size: 16px;
					color: tmGrey;
					height: 50px;
					width: 130px;
					line-height: 50px;
					text-decoration: none;
					transition: all 0.6s ease;
					text-transform: uppercase;

					&:hover {
						border-color: tmBlue;
						color: tmBlue;
					}
				}
			}
		}
	}
	// about
	.details-contents {
		width: 100%;
		box-sizing: border-box;
		padding: 10px 50px;
		background-color: #f3f0f0;

		.details-contents__ttl {
			font-size: 25px;
			font-weight: normal;
			text-align: center;
			padding: 10px 0;
			text-transform: uppercase;

			& ~ .details-contents__ttl {
				margin-top: 30px;
			}
		}
		.details-contents__inner {
			padding: 10px 0;
			margin: 20px 0 0;

			.how-to-section {
				display: table;
				table-layout: fixed;
				width: 100%;

				li {
					display: table-cell;
					text-align: center;

					.icon-item {
						font-size: 50px;
						padding: 15px 0;
					}
					.how-to-ttl {
						font-size: 13px;
					}
					.how-to-txt {
						color: tmLGrey;
						font-size: 14px;
						line-height: 1.5;
						padding: 15px;
					}
				}
			}
			.details-contents__list {
				clear: both;
				font-size: 12px;
				line-height: 1.5;
			}
		}
		.details-contents__inner.-profile > figure {
			float: left;
			width: 150px;
			padding-bottom: 20px;

			img {
				width: 100%;
				height: auto;
			}
		}
		.details-contents__inner.-profile > figcaption {
			overflow: hidden;
			line-height: 1.3;
			padding: 0px 10px 10px;
			font-size: 15px;
			color: tmLGrey;

			.details-name {
				color: tmGrey;
				font-size: 13px;
				padding: 0 0 5px;
			}
			.details-data {
				color: tmGrey;
				font-size: 12px;
				padding-bottom: 5px;

				& > * {float: left;}
				dt {
					text-transform: uppercase;

					& ~ dt {
						margin-left: 10px;
					}
				}
				dt + dd {
					padding: 0 5px;
				}
			}
		}
	}
	// blog
	.blog-contents {
		width: 100%;
		box-sizing: border-box;
		padding: 10px 0;
		background-color: #f3f0f0;

		.toTop {
			text-align: center;
			padding: 50px 0 100px;

			a {
				color: tmGrey;
				font-size: 30px;
				transition: all 0.6s ease;

				&:hover {
					color: tmBlue;
				}
			}
		}
		.blog-contents__ttl {
			font-size: 25px;
			font-weight: normal;
			text-align: center;
			padding: 10px 0;
			text-transform: uppercase;
		}
		.blog-contents__inner {
			padding: 10px 0;
			margin: 20px auto 0;
			-webkit-box-sizing: border-box;
			-moz-box-sizing: border-box;

			.blog-contents__inner__list {
				font-size: 0;
				text-align: center;
				width: 100%;

				li {
					margin: 10px;
					display: inline-block;
					vertical-align: top;
					width: calc(100%/3 - 25px);
					height: 270px !important;

					a {
						display: block;
						height: 100%;
						background-color: transparent;
						border: 2px solid tmGrey;
						border-radius: 2px
						padding: 10px;
						text-align: center;
						font-size: 14px;
						color: tmGrey;
						text-decoration: none;
						transition: all 0.6s ease;
						text-transform: uppercase;

						.info,.title {
							margin-top: 10px;
						}
						.figure {
							max-width: 255px;
							height: 165px;
							overflow: hidden;
							text-align: center;
							margin: 10px auto 0;
						}
						img {
							vertical-align: middle;
							width: 100%;
							height: auto;
						}
						&:hover {
							border-color: tmBlue;
							color: tmBlue;
						}
					}
				}
			}
		}
	}
}

